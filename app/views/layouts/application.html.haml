%html
  %head
    %title
      Here, I realized...

    %link{:href =>'http://fonts.googleapis.com/css?family=Elsie', :rel => 'stylesheet', :type => 'text/css'}/
    %link{:href => "http://cdn.leafletjs.com/leaflet-0.6.3/leaflet.css", :rel => "stylesheet"}/
    %link{:href => "http://cdn.leafletjs.com/leaflet-0.6.3/leaflet.ie.css", :rel => "stylesheet"}/

    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %link{:href => "//api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.css", :rel => "stylesheet"}/
    %link{:href => "//api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.ie.css", :rel => "stylesheet"}/

    / = stylesheet_link_tag    "/smoothDivScroll.css"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  #navbar
    #nav_title
      %p=link_to "Put Yourself in Another's Place.", root_path
    #nav_about
      %p=link_to 'About', static_pages_about_path, :remote => true
    - if current_user
      #nav_logout
        %p=link_to 'Logout', :logout
      #nav_as
        %p
          %a{href:"profile/#{current_user.id}?from=nav", :data => {:remote => "true"}}= "#{current_user.username}'s profile"
    - else
      #nav_signup
        %p=link_to 'Sign Up', new_user_path, :remote => true
      #nav_login
        %p=link_to 'Login', :login, :remote => true

  %img#shipwreck1.shipwrecks{:src => 'assets/ship15_01.png'}
  %img#shipwreck2.shipwrecks{:src => 'assets/ship15_02.png'}
  %img#shipwreck3.shipwrecks{:src => 'assets/ship15_03.png'}
  %img#shipwreck4.shipwrecks{:src => 'assets/ship15_04.png'}
  %img#shipwreck5.shipwrecks{:src => 'assets/ship15_05.png'}
  %img#shipwreck6.shipwrecks{:src => 'assets/ship15_06.png'}
  %img#shipwreck7.shipwrecks{:src => 'assets/ship15_07.png'}
  %img#shipwreck8.shipwrecks{:src => 'assets/ship15_08.png'}
  %img#sliver.shipwrecks{:src => 'assets/shipred_clipped_rev_3.png'}


  #modal
    .modal_wrap
      .modal_overlay
      .vertical_offset
        .modal_box

  #user_show_modal
    .user_show_wrap
      .user_show_modal_overlay
      .user_show_offset
        .user_show_modal_box

  = yield


  / = render "aboutmodal"

  %script{:src => "http://cdn.leafletjs.com/leaflet-0.6.3/leaflet.js"}
  %script{:src => "//api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.js"}
  %script{:src => "http://feather.aviary.com/js/feather.js"}
