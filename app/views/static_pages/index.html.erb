<div id="container">

  <p id="notice"><%= notice %></p>

  <div id='map_filter_container'>
    <div id="filter_cont_1" class="filter_containers">
      <img id="porthole1" class="portholes" src="assets/porthole.png"/>
      <img class="button_map" src="assets/button_map.png">
      <div id='you' class="filter_buttons">
        <div id='filter_you'class="filter_texts">
          <p>You</p>
        </div>
      </div>
    </div><!-- 1 -->
    <div id="filter_cont_2" class="filter_containers">
      <img id="porthole2" class="portholes" src="assets/porthole.png"/>
      <img class="button_map" src="assets/button_map.png">
      <div id='friends' class="filter_buttons">
        <div id='filter_friends' class="filter_texts">
          <p>Friends</p>
        </div>
      </div>
    </div> <!-- 2 -->
    <div id="filter_cont_3" class="filter_containers">
      <img id="porthole3" class="portholes" src="assets/porthole.png"/>
      <img class="button_map" src="assets/button_map.png">
      <div id='everyone' class="filter_buttons">
        <div id='filter_everyone' class="filter_texts">
          <p>Everyone</p>
        </div>
      </div>
    </div> <!-- 3 -->

  </div> <!-- #map_filter_container -->

  <div id="map_container">
  </div> <!-- #map_container -->

  <div id="title">
    <p>Noesis</p>
  </div>

</div>


<% if current_user %>

  <div id="current_user"></div>

  <% @you_images.each do |image| %>
    <div class="you_image" data-caption="<%= image.caption %>" data-image="<%= image.url %>" data-lat="<%= image.lat %>" data-long="<%= image.long %>"></div>
  <% end %>

  <% @friends_images.each do |image| %>
    <div class="friends_image" data-caption="<%= image.caption %>" data-image="<%= image.url %>" data-lat="<%= image.lat %>" data-long="<%= image.long %>"></div>
  <% end %>

  <% @everyone_images.each do |image| %>
    <div class="everyone_image" data-caption="<%= image.caption %>" data-image="<%= image.url %>" data-lat="<%= image.lat %>" data-long="<%= image.long %>"></div>
  <% end %>

<% else %>

  <% @everyone_images.each do |image| %>
    <div class="everyone_image" data-caption="<%= image.caption %>" data-image="<%= image.url %>" data-lat="<%= image.lat %>" data-long="<%= image.long %>"></div>
  <% end %>

<% end %>
</div> <!-- #container -->

<%= render partial: "camera" %>
